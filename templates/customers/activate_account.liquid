<div class="customers customers-active">
  <div class="content small-content">
    <h1>{{ 'customer.activate_account.title' | t }}</h1>
    <p>{{ 'customer.activate_account.subtext' | t }}</p>

    {% comment %}
      This form must use 'activate_customer_password'
    {% endcomment %}
    {% form 'activate_customer_password' %}

      {{ form.errors | default_errors }}

      <label for="CustomerPassword" class="label--hidden">
        <span>{{ 'customer.activate_account.password' | t }}</span>
        <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}">
      </label>
      <label for="CustomerPasswordConfirmation" class="label--hidden">
        <span>{{ 'customer.activate_account.password_confirm' | t }}</span>
        <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
      </label>
      <div>
        <p>
          <input type="submit" class="cta-button" value="{{ 'customer.activate_account.submit' | t }}">
        </p>
      </div>
    {% endform %}
  </div>
</div>
