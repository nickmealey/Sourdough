<!DOCTYPE html> 
<html>
  <head>
    {% include 'head' %}
    {{ content_for_header }}
  </head>
  <body class="{{ template | handle }} {% if template contains 'product' %}product{% endif %} {% if template contains 'collection' %}collection{% endif %} {% if template contains 'customer' %}customer{% endif %} {% if template contains 'page' %}page{% endif %}">
    {% include 'header' %}
    <main class="content">
      {{ content_for_layout }}
    </main>
    {% include 'footer' %}
  </body>
  {% if template contains 'customers' %}
      {{ "shopify_common.js" | shopify_asset_url | script_tag }}
      {{ "customer_area.js"  | shopify_asset_url | script_tag }}
  {% endif %}
</html>