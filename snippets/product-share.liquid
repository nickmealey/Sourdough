<a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank">facebook</a>
<a href="http://twitter.com/home?status={{ product.title | escape | replace:' ','%20' }}%20by%20{{ shop.name | escape | replace:' ','%20' }}%20{{ shop.url }}{{ product.url }}{% if settings.twitter-handle != blank %}%20{{ settings.twitter-handle }}{% endif %}" class="twitter" target="_blank">twitter</a>
<a href="https://pinterest.com/pin/create/button/?url={{ shop.url }}{{ product.url }}&amp;media=https:{{ product.featured_image | product_img_url:'large' }}&amp;description={{ product.title | escape | replace:' ','%20' }}%20by%20{{ shop.name | replace:' ','%20' }}" class="pinterest" target="_blank">pinterest</a>
<a href="mailto:?Subject={{ product.title | replace:' ','%20' }}%20from%20{{ shop.name | replace:' ','%20' }}&body=%0D%0A%0D%0A{{ shop.url }}{{ product.url }}%0D%0A%0D%0A{{ product.description | replace:' ','%20' | strip_html | escape | truncatewords:20 }}" class="mail" target="_blank">email</a>
